<?xml version="1.0"?>
<page 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="employee">
                <arguments>
                    <argument name="label" xsi:type="string">Employees</argument>
                    <argument name="path" xsi:type="string">crud/index/show</argument>
                </arguments>
            </block>
        </referenceBlock>
        <move element="employee" destination="header.links" after="-"/>
    </body>
</page>
