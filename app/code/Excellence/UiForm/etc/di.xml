<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Excellence\UiForm\Api\ImageRepositoryInterface" type="Excellence\UiForm\Model\ImageRepository" />
    <preference for="Excellence\UiForm\Api\Data\ImageInterface" type="Excellence\UiForm\Model\Image" />
    <virtualType name="UiFormDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
        <arguments>
            <argument name="collection" xsi:type="object" shared="false">Excellence\UiForm\Model\Resource\Image\Collection</argument>
            <argument name="filterPool" xsi:type="object" shared="false">UiFormDataGridFilterPool</argument>
        </arguments>
    </virtualType>
    <virtualType name="Excellence\UiForm\Model\ResourceModel\Image\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">excellence_sampleimageuploader_image</argument>
            <argument name="resourceModel" xsi:type="string">Excellence\UiForm\Model\ResourceModel\Image</argument>
        </arguments>
    </virtualType>
    <virtualType name="UiFormImageUploader" type="Excellence\UiForm\Model\Uploader">
        <arguments>
            <argument name="baseTmpPath" xsi:type="const">Excellence\UiForm\Model\Uploader::IMAGE_TMP_PATH</argument>
            <argument name="basePath" xsi:type="const">Excellence\UiForm\Model\Uploader::IMAGE_PATH</argument>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="sampleimageuploader_image_grid_data_source" xsi:type="string">Excellence\UiForm\Model\ResourceModel\Image\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <type name="Excellence\UiForm\Model\UploaderPool">
        <arguments>
            <argument name="uploaders" xsi:type="array">
                <item name="image" xsi:type="string">UiFormImageUploader</item>
            </argument>
        </arguments>
    </type>
    <type name="Excellence\UiForm\Controller\Adminhtml\Image\Upload">
        <arguments>
            <argument name="uploader" xsi:type="object">UiFormImageUploader</argument>
        </arguments>
    </type>
    <type name="Excellence\UiForm\Ui\Component\Listing\Column\Image">
        <arguments>
            <argument name="imageModel" xsi:type="object">UiFormImageUploader</argument>
        </arguments>
    </type>
    <type name="Excellence\UiForm\Controller\Adminhtml\Image\MassDelete">
        <arguments>
            <argument name="successMessage" xsi:type="string" translate="true">A total of %1 record(s) have been deleted.</argument>
            <argument name="errorMessage" xsi:type="string" translate="true">An error occurred while deleting record(s).</argument>
        </arguments>
    </type>
</config>